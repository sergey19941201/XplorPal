<?xml version="1.0" encoding="utf-8" ?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
  <item android:state_pressed="true" >
    <shape>
      <solid
          android:color="#FFFAFA" />
      <stroke
           android:width="3dp"
          android:color="#30709b"  />
      <corners
          android:radius="20dp" />
      <padding
          android:left="10dp"
          android:top="10dp"
          android:right="10dp"
          android:bottom="10dp" />
    </shape>
  </item>
  <item>
    <shape>
      <gradient
          android:startColor="#FFFFFF"
          android:endColor="#FFFFFF"
          android:angle="270" />
      <stroke
           android:width="3dp"
          android:color="#A0522D" />
      <corners
          android:radius="20dp" />
      <padding
          android:left="10dp"
          android:top="10dp"
          android:right="10dp"
          android:bottom="10dp" />
    </shape>
  </item>
</selector>